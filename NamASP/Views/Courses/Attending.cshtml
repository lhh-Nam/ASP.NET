@model NamASP.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Attending</h2>

<div class="row">
    @*<ul>
            @foreach(var course in Model)
            {
                <li>
                    @course.DateTime - @course.Lecturer.Name
                </li>
            }
        </ul>*@

    <ul class="course">
        @foreach (var course in Model.UpcomingCourses)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>

                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>

                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                        @if (Model.ShowAction)
                        {
                            <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">
                                Follow
                            </button>
                        }

                    </span>

                    <span class="category">
                        @course.Category.Name
                    </span>

                    @if (Model.ShowAction)
                    {
                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                    }

                </div>
            </li>
        }
    </ul>
</div>

